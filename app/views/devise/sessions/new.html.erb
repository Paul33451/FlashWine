<h2 class="text-center mb-5">Connexion</h2>

<div class="container-devise pl-5">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
      <br>
      <div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name), class:"btn-ghost" %><br />
           <% end %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, "Me connecter", class:"btn btn-flat mt-10" %>
      </div>

    <% end %>
</div>

<div class="text-center">
  <p >Pas encore de compte ? </p>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Inscription", new_registration_path(resource_name), class:"btn-ghost" %><br />
    <% end %>
</div>
