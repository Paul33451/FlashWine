
<div class="logo-flash-wine text-center">
  <%= image_tag "new-logo-wine-flash.png" %>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active" id="first_img">
      <%= image_tag 'wine_home_1.jpg', class: 'd-block w-100', alt: 'First slide' %>
      <div class="carousel-caption d-md-block">
        <h1 class="writting">Apprends le vin</h1>
        <h4 class="writting">Des cartes informatives pour apprendre des anecdotes sur le vin</h4>
      </div>
    </div>
    <div class="carousel-item" id="second_img">
      <%= image_tag 'wine_home_2.jpg', class: 'd-block w-100', alt: 'First slide' %>
      <div class="carousel-caption d-md-block">
        <h1 class="writting">Des quizz</h1>
        <h4 class="writting">Mesure tes connaissances sur le vin par thème et gagne des récompenses selon ton niveau</h4>
      </div>
    </div>
    <div class="carousel-item" id="third_img">
      <%= image_tag 'wine_home_3.jpg', class: 'd-block w-100', alt: 'First slide' %>
      <div class="carousel-caption d-md-block">
        <h1 class="writting">Des dégustations</h1>
        <h4 class="writting">Débloque des dégustations, donne ton avis sur le vin et trouve le vin idéal en fonction des avis des utilisateurs</h4>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
